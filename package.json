{
  "name": "curso-react-native-completo",
  "version": "1.0.0",
  "description": "Curso completo de desenvolvimento mobile com React Native - Documentação e exemplos",
  "main": "README.md",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "docs:serve": "echo 'Curso disponível em: https://github.com/seu-usuario/curso-react-native'",
    "validate": "echo 'Validando estrutura do curso...' && node scripts/validate-course.js"
  },
  "keywords": [
    "react-native",
    "curso",
    "mobile",
    "documentacao",
    "exemplos",
    "javascript",
    "desenvolvimento-mobile",
    "educacao",
    "etec",
    "aprendizado"
  ],
  "author": "Jackson Sá - ETEC Bento Quirino",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/curso-react-native.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/curso-react-native/issues"
  },
  "homepage": "https://github.com/seu-usuario/curso-react-native#readme",
  "devDependencies": {
    "jest": "^29.5.0",
    "eslint": "^8.42.0",
    "@types/jest": "^29.5.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "**/*.jsx",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!scripts/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
